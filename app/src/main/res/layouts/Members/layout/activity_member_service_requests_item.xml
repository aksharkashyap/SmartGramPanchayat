<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#C6F8C8"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_margin="1dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/id_member_serviceRequests_tv_applicantName"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Name"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/id_member_serviceRequests_tv_applicantID"
            android:layout_below="@+id/id_member_serviceRequests_tv_applicantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant ID"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_member_serviceRequests_tv_serviceName"
            android:layout_below="@+id/id_member_serviceRequests_tv_applicantID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_member_serviceRequests_tv_serviceID"
            android:layout_below="@+id/id_member_serviceRequests_tv_serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service ID"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <ImageView
            android:id="@+id/id_member_serviceRequests_iv_rejectRequest"
            android:src="@drawable/tick_rejected"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_marginTop="6dp"
            android:id="@+id/id_member_serviceRequests_iv_approveRequest"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@+id/id_member_serviceRequests_iv_rejectRequest"
            android:src="@drawable/tick_right" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>