<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#C6F8C8"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/id_member_closedComplaint_tv_complaintID"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint ID"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_member_closedComplaint_tv_applicantID"
            android:layout_below="@+id/id_member_closedComplaint_tv_complaintID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant ID"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_member_closedComplaint_tv_applicantName"
            android:layout_below="@+id/id_member_closedComplaint_tv_applicantID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant Name"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_member_closedComplaint_tv_department"
            android:layout_below="@+id/id_member_closedComplaint_tv_applicantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_member_closedComplaint_tv_complaintMSG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_member_closedComplaint_tv_department"
            android:layout_marginStart="8dp"
            android:text="Complaint"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/id_member_closedComplaint_tv_complaintDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_member_closedComplaint_tv_complaintMSG"
            android:layout_marginStart="8dp"
            android:text="Complaint Date"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/id_member_closedComplaint_tv_complaintClosingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_member_closedComplaint_tv_complaintDate"
            android:layout_marginStart="8dp"
            android:text="Closing Date"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/id_member_closedComplaint_tv_headRemarks"
            android:layout_below="@+id/id_member_closedComplaint_tv_complaintClosingDate"
            android:text="Remarks"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>