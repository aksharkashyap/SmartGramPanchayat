<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#C6F8C8"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/id_admin_validate_user_tv_userName"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_userID"
            android:layout_below="@+id/id_admin_validate_user_tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_villageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_userID"
            android:layout_marginStart="8dp"
            android:text="Village ID"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/id_admin_validate_user_tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_villageID"
            android:layout_marginStart="8dp"
            android:text="Mobile"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/id_admin_validate_user_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_mobile"
            android:layout_marginStart="8dp"
            android:text="Email"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_village"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_email"
            android:layout_marginStart="8dp"
            android:text="Village"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_village"
            android:layout_marginStart="8dp"
            android:text="City"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_city"
            android:layout_marginStart="8dp"
            android:text="State"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_admin_validate_user_tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_admin_validate_user_tv_state"
            android:layout_marginStart="8dp"
            android:text="Remarks"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_admin_validate_user_iv_reject_img"
            android:src="@drawable/reject"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_marginTop="6dp"
            android:id="@+id/id_admin_validate_user_iv_approve_img"
            android:layout_width="38dp"
            android:layout_height="38dp"

            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/id_admin_validate_user_iv_reject_img"
            android:src="@drawable/approve" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>