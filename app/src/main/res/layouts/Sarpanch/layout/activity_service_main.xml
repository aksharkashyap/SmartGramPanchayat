<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainactivity_layout"
    >

    <TextView
        android:id="@+id/id_sarpanch_ManageService_txt_main"
        android:text="There are no services provided by the village!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/id_sarpanch_ManageService_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/id_sarpanch_ManageService_progress_layout"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/id_sarpanch_ManageService_addService_floating"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/id_sarpanch_ManageService_addService_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="addService"
        android:src="@android:drawable/ic_input_add" />


</RelativeLayout>