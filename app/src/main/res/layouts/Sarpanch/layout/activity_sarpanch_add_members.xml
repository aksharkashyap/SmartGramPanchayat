<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_sarpanch_add_members_txt_main"
        android:text="There are no villagers in the village!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/id_sarpanch_add_members_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="myNoteTag">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_sarpanch_add_member_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:scrollbars="vertical" />

    </FrameLayout>

    <Button
        android:id="@+id/id_sarpanch_add_member_submit_btn"
        android:text="Submit"
        android:textColor="#fff"
        android:background="@drawable/rectangle_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>